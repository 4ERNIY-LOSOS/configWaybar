{
    "clock": {
        "interval": 60,
        "format": "{:%H.%M}",
        "tooltip": true,
        "tooltip-format": "{:%d-%m-%Y}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " Muted",
        "format-icons": {
            "default": ["", "", ""]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "~/.config/waybar/scripts/wofi-sound-sink-selector.sh",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
        "scroll-step": 5
    },
    "network": {
        "format-wifi": " {signalStrength}%",
        "format-ethernet": "",
        "format-disconnected": "",
        "interval": 5,
        "tooltip": false
    },
    "cpu": {
        "interval": 10,
        "format": " {usage}%",
        "max-length": 10
    },
    "memory": {
        "interval": 30,
        "format": " {used:0.1f}G"
    },
    "custom/gpu": {
        "exec": "~/.config/waybar/scripts/get_gpu_util.sh",
        "format": "GPU {}%",
        "return-type": "text",
        "interval": 5,
        "tooltip": true,
        "tooltip-format": "Nvidia GPU Load: {}%"
    },
    "hyprland/language": {
        "format": " {short}",
        "tooltip": true,
        "tooltip-format": "Раскладка: {long}"
    }
}
