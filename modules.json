{
    "clock": {
        "interval": 60,
        "tooltip": true,
        "format": "{:%H.%M}",
        "tooltip-format": "{:%d-%m-%Y}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " Muted", // Иконка для "без звука" (fa-volume-slash)
        "format-icons": {
            "default": ["", "", ""] // Иконки для уровней громкости, теперь 3 уровня:
                                               //  (fa-volume-off) ~1-33%
                                               //  (fa-volume-low) ~34-66%
                                               //  (fa-volume-medium) ~67-100%
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle", // Левый клик - Mute/Unmute
        "on-click-right": "~/.config/waybar/scripts/wofi-sound-sink-selector.sh", // Правый клик - запуск скрипта выбора через wofi
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
        "scroll-step": 5 // Шаг прокрутки громкости в процентах
    }
    // Другие модули будут добавляться сюда
}
